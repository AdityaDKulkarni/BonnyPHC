<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/d4dp"
    android:layout_marginEnd="@dimen/d8dp"
    android:layout_marginStart="@dimen/d8dp"
    android:layout_marginBottom="@dimen/d4dp"
    android:backgroundTint="@color/vaccine_record_card_bg"
    app:cardCornerRadius="@dimen/d5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d8dp">

        <TextView
            android:id="@+id/tvVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/s18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvVaccineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/d8dp"
            android:textSize="@dimen/s18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnAdminister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark_administered"
            android:textSize="@dimen/s16sp"
            android:layout_alignStart="@id/tvVaccineName"
            android:textStyle="normal"
            android:layout_alignTop="@id/btnReject"
            android:backgroundTint="@color/white"
            android:layout_alignBottom="@id/btnReject"
            android:textColor="@android:color/holo_green_dark"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnReject"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVaccineStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/d8dp"
            android:layout_marginEnd="@dimen/d8dp"
            android:backgroundTint="@color/white"
            android:text="@string/mark_cancel"
            android:textSize="@dimen/s16sp"
            android:textColor="@android:color/holo_red_dark"
            android:textAllCaps="false" />
    </RelativeLayout>
</android.support.v7.widget.CardView>