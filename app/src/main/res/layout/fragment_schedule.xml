<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/d4dp"
    android:layout_marginEnd="@dimen/d8dp"
    android:layout_marginStart="@dimen/d8dp"
    android:layout_marginBottom="@dimen/d4dp"
    app:cardCornerRadius="@dimen/d5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d8dp">

        <TextView
            android:id="@+id/tvVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/s16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvVaccineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvVaccineWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVaccineName"
            android:layout_marginTop="@dimen/d16dp"
            android:layout_marginStart="@dimen/d8dp"
            android:textSize="@dimen/s16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvVaccineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/d8dp"
            android:layout_alignTop="@id/tvVaccineWeek"
            android:layout_alignBottom="@id/tvVaccineWeek"
            android:textSize="@dimen/s16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
